<h1>Create Survey</h1>

<form method="post" action="/survey/create" enctype="multipart/form-data">
  <table>
    <tr>
      <td><label class="label" for="email">Title</label></td>
      <td><input required="required" type="text" name="survey[title]" placeholder="Enter Title" value=""></td>
    </tr>
    <tr><input type="file" name="image" /></tr>
    <table id="question_1">
      <tr>
        <td><label class="label" for="question">Question</label></td>
        <td><input required="required" type="text" name="question[question_1]" placeholder="Enter Question"></td>
        <td><a class="del_question" href="#">Delete</a></td>
          <td><a class="add_question" href="#">Add</a></td>
      </tr>
      <tr>
        <td><label class="label" for="choices">Choices</label></td>
      </tr>
      <% 2.times do |n| %>
        <tr id="choice_<%= n+1 %>">
          <td></td>
          <td><input required="required" type="text" name="question_1[choice_<%= n+1 %>]" placeholder="Enter Choice <%= n+1 %>">
          </td>
          <td><a class="del_choice" href="#">Delete</a></td>
          <td><a class="add_choice" href="#">Add</a></td>
        </tr>
      <% end %>
    </table>
  </table>
  <div class="submit_qs"><input id="submit_qs_button" type="submit" value="Create Survey"></div>
</form>
